@model Exercise_1.Models.AddToRoleViewModel

@{
    ViewData["Title"] = "AddToRole";
}


<hr />
<div class="row">
<div class="col-md-3"></div>
    <div class="col-md-6">
        <form asp-action="AddToRole">
            <h2>Przypisz uprawnienie do użytkownika</h2>
            <hr/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SelectedIdentityRoleId" class="control-label" name="Uprawnienie">Uprawnienie</label>

                @Html.DropDownListFor(q => q.SelectedIdentityRoleId, new SelectList(Model.IdentityRolesDictionary, "Key", "Value"))

                <span asp-validation-for="SelectedIdentityRoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedIdentityUserId" class="control-label">Użytkownik</label>

                @Html.DropDownListFor(q => q.SelectedIdentityUserId, new SelectList(Model.IdentityUsersDictionary, "Key", "Value"))

                <span asp-validation-for="SelectedIdentityUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-default" asp-action="Index">Anuluj</a>
</div>

