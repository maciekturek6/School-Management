
@{
    ViewData["Title"] = "Remove";
}

<hr/>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form asp-action="Remove">
            <h2>Usuń uprawnienie</h2>
            <hr/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Uprawnienie</label>

                @Html.DropDownList("roleName", new SelectList(Model))
            </div>
            <div class="form-group">
                <input type="submit" value="Usuń" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-default" asp-action="Index">Anuluj</a>
</div>

