@model List<string>

@{
    ViewData["Title"] = "Index";
}

<br />
<br />

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h2 class="animated bounceIn">Uprawnienia w Aplikacji</h2>

            <hr>
            @*@if (User.IsInRole("Admin"))
            {*@
                <a class="btn btn-primary" asp-action="Add"> Dodaj uprawnienie</a>
                <a class="btn btn-danger" asp-action="Remove"> Usuń uprawnienie</a>
                <a class="btn btn-primary" asp-action="AddToRole"> Przypisz użytkownika</a>

            @*}*@
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Uprawnienia
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item
                </td>

                <td>
                    @*@if (User.IsInRole("Admin"))
                    {*@
                        <a class="btn btn-default" asp-action="Edit" asp-route-roleName="@item">Edytuj</a>
                        <a class="btn btn-default" asp-action="Remove" asp-route-roleName="@item">Usuń</a>
                    @*}*@
                </td>
            </tr>
        }
    </tbody>
</table>

