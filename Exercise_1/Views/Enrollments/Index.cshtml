@model IEnumerable<Exercise_1.Models.Enrollment>

@{
    ViewData["Title"] = "Index";
}

<hr />
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h2>Lista ocen</h2>
       
        <p>
            @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-primary" asp-action="Create">Dodaj</a>
    }
        </p>
        <hr />
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.CourseID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.LastName)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.EnrollmentID">Edycja</a>
                    }
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.EnrollmentID">Szczegóły</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.EnrollmentID">Usuń</a>
                    }

                </td>
            </tr>
        }


    </tbody>
</table>
