<!--main-->
<section class="main-w3l">
    <div class="w3layouts-main">
    <h2>Register Now</h2>
    <div class="w3ls-form">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
